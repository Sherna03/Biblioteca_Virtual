<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Description_Books"
    app:cardCornerRadius="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fondo_description">

        <!-- TODO: Update blank fragment layout -->

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:elevation="6dp"
            android:src="@drawable/ic_baseline_circle_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:elevation="6dp"
            android:src="@drawable/ic_baseline_circle_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view9"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/background_titulo_info"
            app:layout_constraintBottom_toTopOf="@+id/Autor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/Titulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cormorantsc_semi"
            android:gravity="center"
            android:text="@string/titulo"
            android:textAppearance="@style/TituloInfo"
            app:layout_constraintBottom_toBottomOf="@+id/view9"
            app:layout_constraintEnd_toEndOf="@+id/view9"
            app:layout_constraintStart_toStartOf="@+id/view9"
            app:layout_constraintTop_toTopOf="@+id/view9" />

        <View
            android:id="@+id/view10"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/background_info"
            app:layout_constraintBottom_toBottomOf="@+id/Titulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Autor" />

        <TextView
            android:id="@+id/Autor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="Autor"
            android:fontFamily="@font/cormorantsc_semi"
            android:textAppearance="@style/SubtituloInfo"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/view10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view10" />

        <TextView
            android:id="@+id/AutorText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/loading"
            android:textAppearance="@style/TextInfo"
            android:fontFamily="@font/goudy_bookletter"
            android:textSize="16sp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Autor" />

        <View
            android:id="@+id/view11"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_info"
            app:layout_constraintBottom_toBottomOf="@+id/Editorial"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/AutorText" />

        <TextView
            android:id="@+id/Editorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="Editorial"
            android:fontFamily="@font/cormorantsc_semi"
            android:textAppearance="@style/SubtituloInfo"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/view11"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view11" />

        <TextView
            android:id="@+id/EditorialText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/loading"
            android:textAppearance="@style/TextInfo"
            android:fontFamily="@font/goudy_bookletter"
            android:textSize="16sp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Editorial" />

        <View
            android:id="@+id/view12"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_info"
            app:layout_constraintBottom_toBottomOf="@+id/YearEditorial"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/EditorialText" />

        <TextView
            android:id="@+id/YearEditorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="Fecha de publicacion"
            android:fontFamily="@font/cormorantsc_semi"
            android:textAppearance="@style/SubtituloInfo"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/view12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view12" />

        <TextView
            android:id="@+id/YearText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/loading"
            android:textAppearance="@style/TextInfo"
            android:fontFamily="@font/goudy_bookletter"
            android:textSize="16sp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/YearEditorial" />

        <View
            android:id="@+id/view13"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_info"
            app:layout_constraintBottom_toBottomOf="@+id/ISBN"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/YearText" />

        <TextView
            android:id="@+id/ISBN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="Numero ISBN-13"
            android:fontFamily="@font/cormorantsc_semi"
            android:textAppearance="@style/SubtituloInfo"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/view13"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view13" />

        <TextView
            android:id="@+id/ISBNText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/loading"
            android:textAppearance="@style/TextInfo"
            android:fontFamily="@font/goudy_bookletter"
            android:textSize="16sp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ISBN" />

        <View
            android:id="@+id/view14"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_info"
            app:layout_constraintBottom_toBottomOf="@+id/Description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ISBNText" />

        <TextView
            android:id="@+id/Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="start"
            android:text="DescripciÃ³n"
            android:fontFamily="@font/cormorantsc_semi"
            android:textAppearance="@style/SubtituloInfo"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/view14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view14" />


        <ScrollView
            android:id="@+id/ScrollDescription"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Description">

            <TextView
                android:id="@+id/DescriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/loading"
                android:textAppearance="@style/TextInfo"
                android:fontFamily="@font/goudy_bookletter"
                android:textSize="16sp"
                android:textStyle="italic" />


        </ScrollView>

        <View
            android:id="@+id/view15"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_info"
            app:layout_constraintBottom_toBottomOf="@+id/Leer_Titulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ScrollDescription" />

        <TextView
            android:id="@+id/Leer_Titulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="Opciones de lectura"
            android:fontFamily="@font/cormorantsc_semi"
            android:textAppearance="@style/SubtituloInfo"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/view15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view15" />

        <Button
            android:id="@+id/Leer"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/background_info_animation"
            android:fontFamily="@font/cormorantsc_normal"
            android:text="Online"
            android:textAllCaps="true"
            android:textAppearance="@style/TituloInfo"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Leer_Titulo" />

        <Button
            android:id="@+id/Leer_Offline"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/background_info_animation"
            android:fontFamily="@font/cormorantsc_normal"
            android:text="Offline"
            android:textAllCaps="true"
            android:textAppearance="@style/TituloInfo"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/Leer"
            app:layout_constraintTop_toBottomOf="@+id/Leer_Titulo" />


    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.cardview.widget.CardView>